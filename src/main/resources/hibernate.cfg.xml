<?xml version='1.0' encoding='utf-8'?>
<hibernate-configuration>
    <session-factory>
        <!-- Database connection settings -->
        <property name="hibernate.connection.url">jdbc:postgresql://127.0.0.1:5432/tracker</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">postgres</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="dialect">org.hibernate.dialect.PostgreSQL94Dialect</property>
        <property name="show_sql">true</property>

        <mapping resource="ru/job4j/models/User.hbm.xml" />
        <mapping class="ru.job4j.models.Item" />
        <mapping class="ru.job4j.models.Comment" />

    </session-factory>
</hibernate-configuration>